  <!-- Adhaar validation -->
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const error = urlParams.get('error');
    if (error === 'duplicate') {
      alert("‚ùå Aadhaar already exist. You have already Applied.");
      window.location.href = "/9th-portal"; // reload clean page after alert
