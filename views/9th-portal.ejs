  <!-- Form Number fields real time JS -->
  <script>
    const onlyDigits = (event) => {
      const input = event.target;
      input.value = input.value.replace(/\D/g, ''); // Remove non-digits
    };

    // Attach to all numeric fields
    document.getElementById('adhaar').addEventListener('input', onlyDigits);
    document.getElementById('sssmID').addEventListener('input', onlyDigits);
    document.getElementById('rollNumber').addEventListener('input', onlyDigits);
    document.getElementById('marks').addEventListener('input', onlyDigits);
    document.getElementById('phone').addEventListener('input', onlyDigits);
  </script>

  <!-- Form Numeric fields custom message -->
  <script>
    const adhaar = document.getElementById('adhaar');
    const sssmID = document.getElementById('sssmID');
    const rollNumber = document.getElementById('rollNumber');
    const marks = document.getElementById('marks');
    const phone = document.getElementById('phone');

    adhaar.addEventListener('input', function () {
      const val = adhaar.value;
      if (!/^\d{12}$/.test(val)) {
        adhaar.setCustomValidity("Aadhaar number must be exactly 12 digits.");
      } else {
        adhaar.setCustomValidity("");
      }
    });

    sssmID.addEventListener('input', function () {
      const val = sssmID.value;
      if (!/^\d{9}$/.test(val)) {
        sssmID.setCustomValidity("Samagra ID must be exactly 9 digits.");
      } else {
        sssmID.setCustomValidity("");
      }
    });

    rollNumber.addEventListener('input', function () {
      const val = rollNumber.value;
      if (!/^\d{5,}$/.test(val)) {
        rollNumber.setCustomValidity("Roll Number must be atleast 5 digits.");
      } else {
        rollNumber.setCustomValidity("");
      }
    });

    marks.addEventListener('input', function () {
      const val = Number(marks.value);
      if (isNaN(val) || val < 0 || val > 100) {
        marks.setCustomValidity("Marks must be between 0 and 100 only.");
      } else {
        marks.setCustomValidity("");
      }
    });

    phone.addEventListener('input', function () {
      const val = phone.value;
      if (!/^\d{10}$/.test(val)) {
        phone.setCustomValidity("Phone number must be exactly 10 digits.");
      } else {
        phone.setCustomValidity("");
      }
    });
  </script>


